<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_math_question1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="quizdroid.chrisli8.washington.edu.quizdroid.MathQuestion1">
    <TextView
        android:id="@+id/mathQuestion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/math_question_1"
        android:gravity="center"
        android:textSize="40sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mathQuestion1">
        <RadioButton
            android:id="@+id/choice1"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <RadioButton
            android:id="@+id/choice2"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_alignParentRight="true"/>/>
        <RadioButton
            android:id="@+id/choice3"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_below="@id/choice1"/>
        <RadioButton
            android:id="@+id/choice4"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_below="@id/choice1"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
